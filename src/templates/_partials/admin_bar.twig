<div class="bg-gray-700 absolute top-0 left-0 text-white w-full">
    <div class="flex p-4">
        <div>{{ site_name }}</div>

        <div class="flex-auto"></div>
    
        <div id="settingsDropdown">
            <button @click='toggleShow' class='anchor'>Gear</button>
			<div v-if='showMenu' class='menu'>
				<div
                    class='menu-item'
                    v-for='item in this.items'
                    v-if="((item.PermissionLevel == 'ADMIN') && (user.admin == 'Y'))"
                >{{ item }}</div>
                <div
                        class='menu-item'
                        v-for='item in this.items'
                        v-else-if="item.PermissionLevel == 'USER'"
                >{{ item }}</div>
			</div>
        </div>

        <div>
            <div class="">
                <a class="text-white no-underline" href="{{ site_url }}logout">Logout</a>
            </div>
        </div>
    </div>
</div>